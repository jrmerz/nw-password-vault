{
  "name": "password-vault",
  "version": "2.0.0",
  "description": "Password Vault built with Electron",
  "main": "app/index.js",
  "dependencies": {
    "@polymer/iron-pages": "^3.0.1",
    "@ucd-lib/cork-app-state": "^1.0.0",
    "@ucd-lib/cork-app-utils": "^4.4.0",
    "electron-is-dev": "^1.1.0",
    "electron-localshortcut": "^3.2.1",
    "fs-extra": "^8.1.0",
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@ucd-lib/cork-app-build": "^0.1.5",
    "electron": "^7.1.10",
    "electron-builder": "^22.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "start": "electron ./app",
    "build": "./build/build.sh",
    "dist-mac-linux": "electron-builder -lm",
    "dist-windows": "electron-builder -w",
    "dist-mac": "electron-builder -m",
    "watch": "cd app && webpack --config webpack.config.js --watch --display-chunks"
  },
  "postinstall": "electron-builder install-app-deps",
  "keywords": [
    "password",
    "vault"
  ],
  "build": {
    "appId": "net.justinmerz.password-vault",
    "productName": "Password Vault",
    "files": [
      "./app/assets/*",
      "./app/ui-bundle.js",
      "./app/index.html",
      "./app/index.js"
    ],
    "directories": {
      "buildResources": "./build-resources"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {},
    "linux": {
      "category": "Development",
      "executableName": "password-vault",
      "artifactName": "${productName}-${version}.${ext}"
    }
  },
  "author": "Justin Merz <jrmerz@gmail.com>",
  "license": "ISC"
}
